<%- include("header") -%>
    <title><%= schoolName %></title>
    <script src="js\jquery\jquery-3.4.1.min.js"></script>
    <script src="js\bootstrap.min.js"></script>
</head>
<body>
    <%- include("navbar") -%>
    <div class="handling-teacher-btn-div">
        <form action="/teacherInfo" method="POST">
            <button type="submit" class="btn btn-info">Handling Teacher</button>
            <input type="hidden" name="districtName" value="<%= districtName %>"></input>
            <input type="hidden" name="schoolName" value="<%= schoolName %>"></input>
            <input type="hidden" name="className" value="<%= className %>"></input>
        </form>
    </div>
    <div class="add-student-btn-div">
        <form action="/addStudent" method="POST">
            <button type="submit" class="btn btn-primary">Add Student</button>
            <input type="hidden" name="districtName" value="<%= districtName %>"></input>
            <input type="hidden" name="schoolName" value="<%= schoolName %>"></input>
            <input type="hidden" name="className" value="<%= className %>"></input>
        </form>
    </div>
    <!-- Example single danger button -->
    <div class="add-mark-dropdown">
        <form action="/markEntry" method="post">
            <div class="btn-group">
                <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Add Mark
                </button>
                <div class="dropdown-menu">
                  <button class="dropdown-item" type="submit" name="name" value="quarterly">Quarterly</button>
                  <button class="dropdown-item" type="submit" name="name" value="halfyearly" href="#">Half Yearly</button>
                  <button class="dropdown-item" type="submit" name="name" value="annual" href="#">Annual</button>
                  <input type="hidden" name="districtName" value="<%= districtName %>"></input>
                  <input type="hidden" name="schoolName" value="<%= schoolName %>"></input>
                  <input type="hidden" name="className" value="<%= className %>"></input>
                </div>
              </div>
        </form>
    </div>
    

    
    <h1>Class <%= className %></h1>
    <% listOfStudents.forEach(function(student) { %>
        <form action="/studentInfoPage" method="POST">
                <div class="card card-classes flex-container" style="width: 10rem;">
                <div class="card-body">
                  <h5 class="card-title"><%=student.name%></h5>
                  <h6 class="card-subtitle mb-2 text-muted"><p>Roll No: <%= student.rollNo %></p></h6>
                  <button type="submit" name="studentBtn" value="<%= student.rollNo %>" class="btn btn-primary btn-sm btn-classes">Go</button>
                  <input type="hidden" name="districtName" value="<%= districtName %>"></input>
                  <input type="hidden" name="schoolName" value="<%= schoolName %>"></input>
                  <input type="hidden" name="className" value="<%= className %>"></input>
                </div>
              </div>    
        </form>
        
        <%});%>
        
        
    
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
</body>
</html>