<%- include("header") -%>
    <title></title>
</head>
<body>
    <%- include("navbar") -%>
    <form class="add-student-form" action="/updateStudentDB" method="POST">
        <div class="form-group row">
          <label for="name" class="col-sm-2 col-form-label">Name</label>
          <div class="col-sm-10">
            <input type="text" name="name" class="form-control" id="name" value="<%= name %>" required>
          </div>
        </div>
        <div class="form-group row">
          <label for="rollNo" class="col-sm-2 col-form-label">Roll No.</label>
          <div class="col-sm-10">
            <input type="text" name="rollNo" class="form-control" id="rollNo" value="<%= rollNo %>" required>
          </div>
        </div>
        <div class="form-group row">
            <label for="class" class="col-sm-2 col-form-label">Class</label>
            <div class="col-sm-10">
              <input type="text" name="studentClass" class="form-control" id="class" value="<%= className %>">
            </div>
          </div>
          <div class="form-group row">
            <label for="school" class="col-sm-2 col-form-label">School</label>
            <div class="col-sm-10">
              <input type="text" readonly name="school" class="form-control-plaintext" id="school" value="<%= schoolName %>">
            </div>
          </div>
          <div class="form-group row">
            <label for="address" class="col-sm-2 col-form-label">Address</label>
            <div class="col-sm-10">
              <input type="text" name="address" class="form-control" id="address" value="<%= address %>" required>
            </div>
          </div>
          <div class="form-group row">
            <label for="district" class="col-sm-2 col-form-label">District</label>
            <div class="col-sm-10">
              <input type="text" readonly name="district" class="form-control-plaintext" id="district" value="<%= districtName %>">
            </div>
          </div>
          <div class="add-student-btn-div-addStudentpage">
            <button type="submit" class="btn btn-info">Submit</button>
          </div>
          <input type="hidden" name="oldName" value="<%= name %>"></input>
          <input type="hidden" name="oldRollNo" value="<%= rollNo %>"></input>
          <input type="hidden" name="oldAddress" value="<%= address %>"></input>
          <input type="hidden" name="oldClass" value="<%= className %>"></input>
        
      </form>
</body>
</html>